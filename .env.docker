services:
  backend:
    environment:
      - API_HOST=0.0.0.0
      - API_PORT=8000
      - CORS_ORIGINS=http://localhost,http://localhost:80
      - UPLOAD_DIR=/app/uploads
      - MODEL_DIR=/app/models
      - SPACY_MODEL=en_core_web_sm
      - DEFAULT_THRESHOLD=0.5
      - MIN_SECTION_LENGTH=20

  frontend:
    # Frontend doesn't need specific environment variables
    # All configuration is handled by nginx proxy
